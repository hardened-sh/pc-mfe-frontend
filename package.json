{
  "name": "poc-microfrontends",
  "version": "2.0.0",
  "description": "POC: SeguranÃ§a em Micro-frontends com React + Vue + Web Components",
  "type": "module",
  "scripts": {
    "dev": "npm run build:mfes && node server.js",
    "dev:vanilla": "node server.js",
    "dev:vulnerable": "VULNERABLE=true npm run dev",
    "dev:secure": "VULNERABLE=false npm run dev",
    "dev:debug": "DEBUG=true npm run dev",
    "build:mfes": "npm run build:dashboard && npm run build:widget",
    "build:dashboard": "cd mfe-dashboard && npm run build",
    "build:widget": "cd mfe-widget && npm run build",
    "install:all": "npm install && cd mfe-dashboard && npm install && cd ../mfe-widget && npm install",
    "lint": "eslint public/*.js server.js",
    "lint:fix": "eslint public/*.js server.js --fix",
    "format": "prettier --write \"public/*.js\" \"server.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"public/*.js\" \"server.js\" \"tests/**/*.js\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "micro-frontends",
    "security",
    "poc"
  ],
  "author": "Luan Santos",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
